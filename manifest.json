{
  "manifest_version": 3,
  "name": "SecureGuard - Data Leak Prevention",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "declarativeNetRequest",
    "notifications",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "https://haveibeened.com/*",
    "https://safebrowsing.googleapis.com/*",
    "https://www.phishtank.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SecureGuard"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
